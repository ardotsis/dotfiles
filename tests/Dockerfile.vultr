FROM debian:bookworm

# To expand optional arguments for install.sh in CMD.
ARG INSTALL_ARGS=""
ENV INSTALL_ARGS=${INSTALL_ARGS}

RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y sudo openssh-server ca-certificates curl tree

COPY . /dotfiles
RUN chmod +x /dotfiles/install.sh

# CMD ["bash", "-c", "cat /dotfiles/install.sh | bash -s -- $INSTALL_ARGS"]
CMD ["bash", "-c", "./dotfiles/install.sh ${INSTALL_ARGS}"]
