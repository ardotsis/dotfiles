{
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "files.autoSave": "afterDelay"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.autoSave": "afterDelay"
  },
  "[json]": {
    "editor.codeActionsOnSave": {
      "source.sort.json": "always"
    },
    "editor.defaultFormatter": "richie5um2.vscode-sort-json"
  },
  "[jsonc]": {
    "editor.codeActionsOnSave": {
      "source.sort.json": "always"
    },
    "editor.defaultFormatter": "richie5um2.vscode-sort-json"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "chat.commandCenter.enabled": false,
  "code-runner.executorMap": {
    "shellscript": "  & \"C:\\Program Files\\Git\\bin\\bash.exe\""
  },
  "code-runner.runInTerminal": true,
  "cSpell.words": [
    "ardotsis",
    "ar.sis",
    "menhera.art",
    "menhera",
    "kawaii",
    "suckless"
  ],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  // editor.lightbulb.enabled: https://github.com/microsoft/vscode-copilot-release/issues/735#issuecomment-1886589021
  "editor.lightbulb.enabled": "off",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 50,
  "files.eol": "\n",
  // github.copilot.editor.enableCodeActions: https://github.com/microsoft/vscode-copilot-release/issues/735#issuecomment-1886589021
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.enable": {
    "*": false,
    "markdown": false,
    "plaintext": false,
    "scminput": false,
    "shellscript": false
  },
  "inlineChat.lineNaturalLanguageHint": false,
  "redhat.telemetry.enabled": false,
  "telemetry.feedback.enabled": false,
  "terminal.integrated.allowedLinkSchemes": [
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
    "docker-desktop"
  ],
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.tabs.enabled": false,
  "vscode-neovim.compositeKeys": {
    "jj": {
      "command": "vscode-neovim.escape"
    }
  },
  "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
  "window.menuBarVisibility": "compact",
  "workbench.colorTheme": "Rouge 2",
  "workbench.iconTheme": "material-icon-theme"
}