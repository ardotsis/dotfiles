{
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "files.autoSave": "afterDelay"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.autoSave": "afterDelay"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "files.autoSave": "afterDelay"
  },
  "[json]": {
    "editor.codeActionsOnSave": {
      "source.sort.json": "always"
    },
    "editor.defaultFormatter": "richie5um2.vscode-sort-json"
  },
  "[jsonc]": {
    "editor.codeActionsOnSave": {
      "source.sort.json": "always"
    },
    "editor.defaultFormatter": "richie5um2.vscode-sort-json"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "chat.commandCenter.enabled": false,
  "code-runner.executorMap": {
    "shellscript": "  & \"C:\\Program Files\\Git\\bin\\bash.exe\""
  },
  "code-runner.runInTerminal": true,
  "cSpell.words": [
    "ar.sis",
    "ardotsis",
    "kanon",
    "Kanon",
    "menhera",
    "menhera.art",
    "kawaii",
    "suckless"
  ],
  "editor.fontFamily": "'Hack Nerd Font', Consolas, 'Courier New', monospace",
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  // editor.lightbulb.enabled: https://github.com/microsoft/vscode-copilot-release/issues/735#issuecomment-1886589021
  "editor.lightbulb.enabled": "off",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.minimap.size": "fit",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 100,
  "files.eol": "\n",
  // github.copilot.editor.enableCodeActions: https://github.com/microsoft/vscode-copilot-release/issues/735#issuecomment-1886589021
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.enable": {
    "*": false,
    "markdown": false,
    "plaintext": false,
    "scminput": false,
    "shellscript": false
  },
  "inlineChat.lineNaturalLanguageHint": false,
  "redhat.telemetry.enabled": false,
  "telemetry.feedback.enabled": false,
  "terminal.integrated.allowedLinkSchemes": [
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
    "docker-desktop"
  ],
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontFamily": "'Hack Nerd Font', Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.tabs.enabled": false,
  "vscode-neovim.compositeKeys": {
    "jj": {
      "command": "vscode-neovim.escape"
    }
  },
  "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
  "vscode-neovim.neovimInitVimPaths.win32": "C:\\Users\\owner\\AppData\\Local\\nvim\\init_vscode.lua",
  "window.commandCenter": false,
  "window.menuBarVisibility": "compact",
  "workbench.activityBar.location": "default",
  "workbench.colorCustomizations": {
    "editor.inactiveSelectionBackground": "#f7e9f220", // 恋白のかすかな残り香
    "editor.selectionBackground": "#ffabdfa8", // 恋白のメイン選択色（少し濃い）
    "editor.selectionForeground": "#3a2a2a", // 恋白の上でも読める落ち着いた文字色
    "editor.selectionHighlightBackground": "#f7e9f250", // 恋白の気配レベルの薄い強調
    "editor.selectionHighlightBorder": "#ff89c0" // 薄い恋白の輪郭
  },
  "workbench.colorTheme": "Gruvbox in Black Bordered",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.layoutControl.enabled": false,
  "workbench.statusBar.visible": false
}